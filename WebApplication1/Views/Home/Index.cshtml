﻿@using WebApplication1.ViewModel;
@model HomeViewModel


<section class="mb--30">
    <div class="container">
        <div class="row">
            @foreach (var item in Model.Services)
            {
                <div class="col-xl-3 col-md-6 mt--30">
                    <div class="feature-box h-100">
                        <div class="icon">
                            <i class="@item.Logo"></i>
                        </div>
                        <div class="text">
                            <h5>@item.Title</h5>
                            <p>@item.Description</p>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>